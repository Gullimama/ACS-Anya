{% extends "template.njk" %}

{% block main %}

<div class="sign-page">
  <div class="site-wrapper contact-wrapper">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
          <div class="brand text-center pt--40"><a href=""><img src="./image/png/l1-logo.png" alt=""></a></div>

        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
          <div class="main-block text-center">
            <div class="anya-form">
              <form action="./">
                <div class="form-title pb--25">
                  <h2 class="title">Forgot password?</h2>
                  <p>Enter your details to recieve a reset link</p>
                </div>
                <div class="form-group px-lg--45">
                  <input class="form-control" type="email" id="email" placeholder="Email address">
                </div>
                <div class="form-group px-lg--45 button-block text-center">
                  <button class="form-btn">Send Reset Link</button>
                  <p class="sign-up-text">Remember password?<a href=""> Sign in</a></p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


{% endblock %}
